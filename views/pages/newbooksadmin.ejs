<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
  <%- include('../partials/header') %>

  <div class="kth-main-content">
    <h1>Nya b√∂cker</h1>
    <table id="newbooksTable" class="display" style="width:100%">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>ISBN</th>
          <th>Thumbnail</th>
          <th>Activation Date</th>
          <th>Publication Date</th>
          <th>Booktype</th>
          <th>Category</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach(function(book) { %>
        <tr>
          <td><%= book.id %></td>
          <td><%= book.title %></td>
          <td><%= book.isbn %></td>
          <td><img src="<%= book.coverurl %>" alt="<%= book.title %>" width="50"></td>
          <td><%= book.activationdate %></td>
          <td><%= book.publicationdate %></td>
          <td><%= book.booktype %></td>
          <td><%= book.category %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <!-- Initialize DataTables -->
  <script>
    $(document).ready(function() {
      $('#newbooksTable').DataTable({
        "paging": true,
        "layout": {
          top2Start: 'pageLength',
          top2End: 'search',
          topStart: 'info',
          topEnd: 'paging',
          bottomStart: 'info',
          bottomEnd: 'paging'
        }
      });
    });
  </script>
</body>
</html>

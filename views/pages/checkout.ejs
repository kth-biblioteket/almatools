<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css">

    <link rel="stylesheet" type="text/css" href="/almatools/css/style.css">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Figtree:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">

    <style>
        body {
            margin: 0 auto;
            font-family: "Figtree", Arial, "Helvetica Neue", helvetica, sans-serif;
            padding: 0em 20px 20px 20px;
        }

        body #gradientBorder {
            height: 6px;
            background-image: linear-gradient(to left, #005ea4, #5c98c4);
            margin-top: 10px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th,
        td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        hr.solid {
            border-top: 3px solid #000;
        }

        a {
            text-decoration: none;
        }

        main .navbar-expand-lg .navbar-nav .nav-link {
            padding-right: 1rem;
            padding-left: 0rem;
        }

        .nav-link {
            font-size: 1.25rem;
        }

        .nav-link.active {
            color: red;
        }

        .navbar {
            display: block !important;
            padding-top: 20px;
        }

        .navbar-nav {
            flex: 1
        }

        .navbar-brand {
            font-family: "Open Sans", Arial, "Helvetica Neue", helvetica, sans-serif;
            font-size: 1.25rem;
            font-weight: 600;
            color: #000;
            line-height: 1.375;
            margin-top: 0;
            margin-bottom: 0;
            height: auto;
            max-width: calc(100% - 136px);
            position: relative;
            top: -5px;
        }

        .navbar-brand img {
            margin: 0 30px 0 0;
        }

        .wrap {
            width: 270px;
            height: 475px;
            padding: 0;
            overflow: hidden;
            border: 1px solid #888888;
        }

        .frame {
            width: 1080px;
            height: 1920px;
            border: 0;
            -ms-transform: scale(0.25);
            -moz-transform: scale(0.25);
            -o-transform: scale(0.25);
            -webkit-transform: scale(0.25);
            transform: scale(0.25);

            -ms-transform-origin: 0 0;
            -moz-transform-origin: 0 0;
            -o-transform-origin: 0 0;
            -webkit-transform-origin: 0 0;
            transform-origin: 0 0;
        }

        .header {
            z-index: 10;
            display: flex;
            flex-direction: row;
            background-color: #ffffff;
            padding: 10px;
        }

        #content {
            z-index: 1;
            padding: 10px;
            display: flex;
        }

        #logfile {
            width: 100%;
        }

        h2 {
            padding: 0;
            margin: 0;
        }

        .paymentinfo {
            display: flex;
            width: 400px;
            padding-bottom: 10px
        }

        .articleFooterDivider {
            border-bottom: 1px solid #d4d4d4;
            margin-bottom: 15px;
            padding-bottom: 10px;
        }

        .col {
            flex-basis: 0;
            flex-grow: 1;
            max-width: 100%;
        }

        footer#articleFooter {
            clear: both;
            font-family: "Open Sans", Arial, "Helvetica Neue", helvetica, sans-serif;
            font-size: 1rem;
            font-weight: 400;
            color: #000;
            line-height: 1.5;
            margin-top: 0;
            margin-bottom: 14px;
        }

        footer h2 {
            font-family: "Open Sans", Arial, "Helvetica Neue", helvetica, sans-serif;
            font-size: 1.25rem;
            font-weight: 600;
            color: #000;
            line-height: 1.375;
            margin-top: 0;
            margin-bottom: 10px;
        }

        footer#articleFooter .col .belongsTo .label,
        footer#articleFooter .col .contactInfo .label {
            font-weight: 700;
        }

        @media (min-width: 576px) {
            footer#articleFooter .col .contactInfo .label {
                display: inline;
            }

            footer#articleFooter .col .contactInfo .label:after {
                content: " ";
            }
        }

        @media screen and (max-width: 400px) {
            .navbar-brand {
                font-size: 0.8rem;
            }

            .paymentinfo {
                width: 270px;
            }

        }

        @media screen and (max-width: 1000px) {
            .navcontainer {
                display: flex;
                flex-wrap: inherit;
                align-items: center;
                justify-content: space-between;
            }
        }

        @media screen and (max-width: 600px) {
            table {
                border: 0;
            }

            table caption {
                font-size: 1.3em;
            }

            table thead {
                border: none;
                clip: rect(0 0 0 0);
                height: 1px;
                margin: -1px;
                overflow: hidden;
                padding: 0;
                position: absolute;
                width: 1px;
            }

            table tr {
                border-bottom: 3px solid #ddd;
                display: block;
                margin-bottom: .625em;
            }

            table td {
                border-bottom: 1px solid #ddd;
                display: block;
                font-size: .8em;
                text-align: right;
            }

            table td::before {
                /*
                        * aria-label has no advantage, it won't be read inside a table
                        content: attr(aria-label);
                        */
                content: attr(data-label);
                float: left;
                font-weight: bold;
                text-transform: uppercase;
            }

            table td:last-child {
                border-bottom: 0;
            }
        }
    </style>
</head>

<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="navcontainer">
                <a class="navbar-brand" href="#">
                    <img alt="" src="/almatools/images/kthlogo_marinbla.svg" width="75" height="75"
                        class="d-inline-block align-top"><%- almapaymentdata.language=='sv' ?
                        almapaymentdata.labels.sv.systemheader :almapaymentdata.labels.en.systemheader %>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="navbar-nav">
                        <div class="nav-item">
                            <div style="flex:1;font-size:1.25rem">Payment</div>
                        </div>
                    </div>
                    <form style="flex:2;display:flex;justify-content:flex-end">
                        <button style="margin-right:10px" type="button"
                            onclick="location.href= '/almatools/payment?jwt=<%=almapaymentdata.jwt%>'"
                            class="btn btn-primary">
                            Tillbaks till skulder
                        </button>
                    </form>
                </div>
            </div>
            <div id="gradientBorder"></div>
        </nav>
        <div style="flex:2;padding-right:10px">
            <div class="card" style="margin-bottom:10px">
                <% if(almapaymentdata.status=="success" ) { %>
                    <% if(almapaymentdata.totalamount> 0) { %>
                        <div class="card-body" style="display:flex;flex-direction:row;padding-bottom:40px">
                            <div style="flex:2">
                                <div class="paymentinfo">
                                    <div style="flex:1">
                                        Användarnamn:
                                    </div>
                                    <div style="flex:1">
                                        <%=almapaymentdata.decodedtoken.userName%>
                                    </div>
                                </div>
                                <div class="paymentinfo">
                                    <div style="flex:1">
                                        Namn:
                                    </div>
                                    <div style="flex:1">
                                        <%=almapaymentdata.decodedtoken.displayName%>
                                    </div>
                                </div>
                                <div id="almafines" class="paymentinfo">
                                    <div style="flex:1;font-weight: bold;">
                                        Att betala:
                                    </div>
                                    <div style="flex:1">
                                        <%=almapaymentdata.totalamount%> SEK
                                    </div>
                                </div>
                                <p>Förseningsavgifter och annat kopplat till biblioteksverksamheten är undantagna från
                                    skatteplikt för mervärdesskatt (moms)</p>
                                <div id="checkout-container-div">
                                </div>
                            </div>
                        </div>
                        <% } else { %>
                            <div style="padding-bottom: 10px">
                                Du har inga skulder att betala.
                            </div>
                            <% } %>
                                <% } else { %>
                                    <div class="card-body">
                                        <div class="paymentinfo">
                                            <div style="flex:1">
                                                <%=almapaymentdata.message%>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
            </div>
        </div>
        <footer id="articleFooter">
            <div class="articleFooterDivider"></div>
            <h2>Kontakta oss</h2>
            <p>
                Tel: 08-790 70 88
                <br>
                E-post: <a href="mailto:biblioteket@kth.se">biblioteket@kth.se</a>
                <br>
                Organisationsnummer: 202100-3054
            </p>
            <div class="col">
                <div class="contactInfo">
                    <span class="label"></span><a target="_new" href="<%=almapaymentdata.tocurl%>">Villkor</a>
                </div>
                <div class="contactInfo">
                    <span class="label"></span><a target="_new" href="<%=almapaymentdata.gdprurl%>">Behandling av
                        personuppgifter</a>
                </div>
            </div>
        </footer>
    </div>
    <script src="<%=almapaymentdata.nets.checkouturl%>"></script>
    <% if(almapaymentdata.totalamount> 0 ) { %>
        <script>
            const checkpaymentUrl = '<%= config.checkpaymentUrl %>';
            document.addEventListener('DOMContentLoaded', function () {
                const urlParams = new URLSearchParams(window.location.search);
                const paymentId = urlParams.get('paymentId');
                if (paymentId) {
                    const checkoutOptions = {
                        checkoutKey: '<%=almapaymentdata.nets.checkoutkey%>',
                        paymentId: paymentId,
                        containerId: "checkout-container-div",
                        language: "sv-SE",
                        theme: {
                            buttonRadius: "5px"
                        }
                    };
                    const checkout = new Dibs.Checkout(checkoutOptions);
                    checkout.on('payment-completed', function (response) {
                        $("#almafines").html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Kollar dina avgifter...');
                        //Skulden i Alma uppdateras via webhook
                        //Kolla om skulden i Alma är uppdaterad
                        //Visa info om betalning och eventuellt återstående skulder
                        setTimeout(function () {
                            checkpayment(paymentId)
                        }, 3000);

                    });
                } else {
                    $("#almafines").html("Expected a paymentId");
                }
            });

            function checkpayment(paymentId) {
                $.ajax({
                    url: checkpaymentUrl + paymentId,
                    type: "POST",
                    dataType: 'json',
                    success: function (data) {
                        if (data.finished == 0) {
                            setTimeout(checkpayment(paymentId), 2000);
                        } else {
                            //Visa betalinfo + länk till primo
                            $("#almafines").html('<div>Skulden reglerad i bibliotekssystemet</div>')
                        }
                    },
                    error: function (err) {
                        console.log(err);
                    }
                });
            }

        </script>
        <% } %>
</body>

</html>